{% comment %}
  Desert Luxury Hero Section
{% endcomment %}
<section class="desert-hero desert-hero--{{ section.id }}" style="--hero-height: {{ section.settings.hero_height }}vh;">
  <div class="desert-hero__bg">
    {% if section.settings.bg_image != blank %}
      {{ section.settings.bg_image | image_url: width: 2400 | image_tag:
        loading: 'lazy',
        widths: '800, 1200, 1600, 2000, 2400',
        sizes: '(min-width: 1200px) 1200px, 100vw',
        alt: section.settings.heading | escape
      }}
    {% endif %}
    <span class="desert-hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></span>
  </div>

  <div class="desert-hero__container desert-hero__container--{{ section.settings.content_align }}">
    <div class="desert-hero__content">
      {% if section.settings.eyebrow != blank %}
        <p class="desert-hero__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h1 class="desert-hero__heading">{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="desert-hero__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      <div class="desert-hero__ctas">
        {% if section.settings.primary_label != blank and section.settings.primary_link != blank %}
          <a class="desert-hero__btn desert-hero__btn--primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
        {% endif %}
        {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
          <a class="desert-hero__btn desert-hero__btn--secondary" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
        {% endif %}
      </div>
    </div>
  </div>

  <style>
    .desert-hero--{{ section.id }}{position:relative;min-height:calc(var(--hero-height,80)*1vh);display:grid;place-items:center;overflow:hidden}
    .desert-hero--{{ section.id }} .desert-hero__bg{position:absolute;inset:0}
    .desert-hero--{{ section.id }} .desert-hero__bg img{width:100%;height:100%;object-fit:cover;display:block}
    .desert-hero--{{ section.id }} .desert-hero__overlay{position:absolute;inset:0;background:#000;pointer-events:none}
    .desert-hero--{{ section.id }} .desert-hero__container{position:relative;width:min(1100px,92vw);margin:0 auto;padding:clamp(1.25rem,2.5vw,2rem);display:grid;align-items:center;min-height:inherit}
    .desert-hero--{{ section.id }} .desert-hero__container--left{justify-items:start;text-align:left}
    .desert-hero--{{ section.id }} .desert-hero__container--center{justify-items:center;text-align:center}
    .desert-hero--{{ section.id }} .desert-hero__container--right{justify-items:end;text-align:right}
    .desert-hero--{{ section.id }} .desert-hero__content{color:#fff;max-width:780px}
    .desert-hero--{{ section.id }} .desert-hero__eyebrow{letter-spacing:.12em;text-transform:uppercase;font-size:.8rem;margin:0 0 .5rem;opacity:.85}
    .desert-hero--{{ section.id }} .desert-hero__heading{font-size:clamp(2rem,5vw,3.5rem);line-height:1.05;margin:0 0 .75rem;font-weight:500}
    .desert-hero--{{ section.id }} .desert-hero__subheading{font-size:clamp(1rem,1.6vw,1.25rem);line-height:1.6;margin:0 0 1.25rem;opacity:.95}
    .desert-hero--{{ section.id }} .desert-hero__ctas{display:flex;gap:.75rem;flex-wrap:wrap}
    .desert-hero--{{ section.id }} .desert-hero__btn{display:inline-block;padding:.8rem 1.25rem;border-radius:999px;text-decoration:none;transition:transform .15s ease,opacity .15s ease,background .15s ease,color .15s ease,border-color .15s ease;font-weight:500}
    .desert-hero--{{ section.id }} .desert-hero__btn--primary{background:#111;color:#fff;border:1px solid #111}
    .desert-hero--{{ section.id }} .desert-hero__btn--primary:hover{transform:translateY(-1px);opacity:.95}
    .desert-hero--{{ section.id }} .desert-hero__btn--secondary{background:transparent;color:#fff;border:1px solid rgba(255,255,255,.6)}
    .desert-hero--{{ section.id }} .desert-hero__btn--secondary:hover{transform:translateY(-1px);border-color:#fff}
  </style>
</section>

{% schema %}
{
  "name": "Desert Luxury Hero",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Luxury Arabian Inspired" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Timeless, elegant fragrances" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover refined scents crafted for a modern, minimalist aesthetic." },
    { "type": "image_picker", "id": "bg_image", "label": "Background image" },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay opacity", "default": 35, "min": 0, "max": 80, "step": 5, "unit": "%" },
    { "type": "select", "id": "content_align", "label": "Content alignment", "default": "center", "options": [
      { "label": "Left", "value": "left" },
      { "label": "Center", "value": "center" },
      { "label": "Right", "value": "right" }
    ]},
    { "type": "range", "id": "hero_height", "label": "Hero height (vh)", "default": 80, "min": 50, "max": 100, "step": 5 },
    { "type": "text", "id": "primary_label", "label": "Primary button label", "default": "Shop now" },
    { "type": "url",  "id": "primary_link",  "label": "Primary button link" },
    { "type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "Learn more" },
    { "type": "url",  "id": "secondary_link",  "label": "Secondary button link" }
  ],
  "presets": [{ "name": "Desert Luxury Hero" }]
}
{% endschema %}
